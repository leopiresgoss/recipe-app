<section id="foods-index">
  <div>
    <%= link_to 'Add New Food',  new_food_path %>
  </div>
  <table>
    <tr>
      <th>Food</th>
      <th>Measurement Unit</th>
      <th>Unit price</th>
      <th>Actions</th>
    </tr>
    <% @foods.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td><%= item.measurement_unit %></td>
        <td>$<%= number_with_precision(item.price, precision: 2) %></td>
        <td><%= button_to 'Delete',  food_path(item.id), method: :delete %></td>
      </tr>
    <% end %>
  </table>
</section>