<section id="foods-index" class="flex-col">
  <div class="add-new">
    <%= link_to 'Add New Food',  new_food_path, class: 'btn' %>
  </div>
  <table>
    <thead>
      <tr>
        <th>Food</th>
        <th>Measurement Unit</th>
        <th>Unit Price</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @foods.each do |item| %>
        <tr>
          <td class="food-name"><%= item.name %></td>
          <td><%= item.measurement_unit %></td>
          <td>$<%= number_with_precision(item.unit_price, precision: 2) %></td>
          <td><%= button_to 'Delete',  food_path(item.id), method: :delete, class: 'btn' %></td>
        </tr>
      <% end %>    
    </tbody>
  </table>
</section>